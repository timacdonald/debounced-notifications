{
    "name": "timacdonald/notification-throttle",
    "authors": [
        {
            "name": "Tim MacDonald",
            "email": "hello@timacdonald.me",
            "homepage": "https://timacdonald.me"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "orchestra/testbench": "^6.7",
        "phpunit/phpunit": "^9.0"
    },
    "require-dev": {
        "infection/infection": "^0.18.2",
        "phpstan/phpstan": "^0.12",
        "timacdonald/callable-fake": "^1.0",
        "timacdonald/php-style": "dev-master",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "TiMacDonald\\ThrottledNotifications\\": "src/"
        },
        "classmap": [
            "migrations"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "classmap": [
            "tests/migrations"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "TiMacDonald\\ThrottledNotifications\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "lint": [
            "clear",
            "./vendor/bin/php-cs-fixer fix",
            "./vendor/bin/psalm",
            "./vendor/bin/phpstan analyse"
        ],
        "test": [
            "clear",
            "./vendor/bin/phpunit",
            "./vendor/bin/infection --threads=4"
        ]
    }
}
